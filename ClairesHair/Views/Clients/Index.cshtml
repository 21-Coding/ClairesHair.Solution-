@{
    Layout = "_Layout";
}

@using Claire.Models;
@model List<Claire.Models.Client>;

<div class="col-md-8 offset-md-2">
    <h3>Clients</h3>
</div>
<br>

@if (@Model.Count == 0)
{
    <h3>No clients.</h3>

}
<div class="col-md-8 offset-md-2">
    @foreach (Client client in Model)
    {
        @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })
    
        <br>

    }
    </div>
    <p>@Html.ActionLink("Main", "Index", "Home")</p>