@{
    Layout = "_Layout";
}

@using Claire.Models;
@model List<Claire.Models.Client>;

<div class="col-md-8 offset-md-2">
    <h3>Clients</h3>
</div>
<br>

@if (@Model.Count == 0)
{
    <h3>No clients.</h3>

}
<div class="col-md-8 offset-md-2">
    @foreach (Client client in Model)
    {
        <li>Html.ActionLink($"{client.ClientName}", "Info", new { id = client.ClientId }) : @client.Phone
        </li>
        <br>

    }
    </div>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>