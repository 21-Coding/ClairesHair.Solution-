@{
    Layout = "_Layout";
}

@using Claire.Models;
@model List<Claire.Models.Client>;


 <h3>Available Clients:</h3>



@if (@Model.Count == 0)
{
    <p>No clients.</p>

}
<div class="col-md-8 offset-md-2">
    @foreach (Client client in Model)
    {
        @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })
    
        <br>

    }
    </div>
    <p>@Html.ActionLink("Add", "Create", "Clients")</p>
    <p>@Html.ActionLink("Main", "Index", "Home")</p>