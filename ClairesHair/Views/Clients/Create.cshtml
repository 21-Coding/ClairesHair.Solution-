@{
    Layout = "_Layout";
}

@model Claire.Models.Client

<div class="col-md-6 offset-md-3">
    @using (Html.BeginForm())
    {
        <div class="form-group">
        Client's Name: @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required = "required"})
        </div>
        <div class="form-group">
        Client's Phone Number: @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", required="required" })
        </div>
        <div class="form-group">
        <div>Choose a stylist this client: @Html.DropDownList("StylistId")</div>
        </div>

        <input type="submit" value="Add Client" class="btn btn-outline-success my-2 my-sm-0">

    }
    </div>